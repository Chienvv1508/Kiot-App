<Window x:Class="ProjectInstaArt.UI.CommonUI.ChangePassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectInstaArt.UI.CommonUI"
        mc:Ignorable="d"
        Title="ChangePassword" Height="350" Width="600">
    <Grid>
        <StackPanel  Margin="10,10,10,0">
            <Label Content="Thay Đổi Mật Khẩu" Foreground="Aqua" 
           HorizontalAlignment="Center" FontSize="20"/>
            <StackPanel  Margin="10,30,10,0" Width="400" HorizontalAlignment="Left" >
                <Label Content="Mật Khẩu Cũ: " />
                <PasswordBox Name="txtPassWord"/>
                <Label Content="Mật Khẩu Mới: " Margin="0,5,0,0" />
                <PasswordBox Name="txtNewPassWord"/>
                <Label Content="Nhập Lại Mật Khẩu Mới: " Margin="0,5,0,0" />
                <PasswordBox Name="txtConfirmPassWord"/>
               
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="150,20,0,0">
                
                <Button Name="btnSave" Content="Lưu" Margin="150,0,0,0"
Width="120" Height="30" Click="btnSave_Click"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
